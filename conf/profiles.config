profiles {
    standard {
        process.executor = 'local'
        params.cores = 1
        process.cpus = "${params.cores}"
        params.maxForks = 1
        process.maxForks = "${params.maxForks}"
        params.python_module = ""
        params.mummer_module = ""
        params.skesa_module = ""
        params.bedtools_module = ""
        params.refchooser_module = ""
    }
    local_multithread {
        process.executor = 'local'
        params.maxForks = 1
        process.maxForks = "${params.maxForks}"
        params.cores = 1
        process.cpus = "${params.cores}"
        params.python_module = ""
        params.mummer_module = ""
        params.skesa_module = ""
        params.bedtools_module = ""
        params.refchooser_module = ""
    }
    slurmHPC {
        process.executor = 'slurm'
        params.maxForks = 30
        process.maxForks = "${params.maxForks}"
        params.cores = 20
        process.cpus = "${params.cores}"
        params.python_module = "python/3.8.1"
        params.mummer_module = "mummer/4.0.0"
        params.skesa_module = "skesa/2.5.0"
        params.bedtools_module = "bedtools"
        params.refchooser_module = "refchooser/0.2.1"
    }
    slurmHPC_test {
        process.executor = 'slurm'
        process.clusterOptions = {"-p test"}
        params.maxForks = 30
        process.maxForks = "${params.maxForks}"
        params.cores = 20
        process.cpus = "${params.cores}"
        params.python_module = "python/3.8.1"
        params.mummer_module = "mummer/4.0.0"
        params.skesa_module = "skesa/2.5.0"
        params.bedtools_module = "bedtools"
        params.refchooser_module = "refchooser/0.2.1"

    }
    slurmHPC_int {
        process.executor = 'local'
        params.maxForks = 20
        process.maxForks = "${params.maxForks}"
        params.cores = 20
        process.cpus = "${params.cores}"
        params.python_module = "python/3.8.1"
        params.mummer_module = "mummer/4.0.0"
        params.skesa_module = "skesa/2.5.0"
        params.bedtools_module = "bedtools"
        params.refchooser_module = "refchooser/0.2.1"
    }
}
